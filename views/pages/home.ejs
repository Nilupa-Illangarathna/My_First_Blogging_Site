<!-- Head.ejs adding -->
<%- include('../partials/header'); %>

<body>  
    <!-- Sidebar -->
    <%- include('../partials/sidebar'); %>
    <!-- Main body -->
    <div id="main">
      <!-- Navigation bar -->
    <%- include('../partials/navigation_bar'); %>
    <!-- the button used to open/close sidebar -->
    <div class="SpaceDiv"></div>
    <span class="open_close_sidebar_button Body_Padding_left" onclick="openNav1()">&#9776; Click</span>
    <!-- Contents of the body -->
    <div class="SpaceDiv"></div>
    <div class="SpaceDiv"></div>

    
    <h1 class="Body_Padding_left Body_Padding_right"><%= HeaderOfThePage %></h1> 


    <% if(ArrayofPosts.length ===0){  %>
      <p class="Body_Padding_left Body_Padding_right">Compose a new post</p> 
    <% } else{ %>
            <% if(IndexesOfThePost=== -1){  %>
        <p class="Body_Padding_left Body_Padding_right">Select a post</p> 
      <% } else{ %>     
        <br> 
        <h3 class="Body_Padding_left Body_Padding_right"><%= ArrayofPosts[IndexesOfThePost][0] %></h3>
        <br>
        <% for(let i=1;i< ArrayofPosts[IndexesOfThePost].length ; i++){ %>  
        <div class="border border-secondary margine_top_bottom"> 
              <h4><p class="Body_Padding_left Body_Padding_right"><%= ArrayofPosts[IndexesOfThePost][i][0] %></p></h4> 
              <% for(let j=1;j< ArrayofPosts[IndexesOfThePost][i].length ; j++){ %>   
                <p class="Body_Padding_left Body_Padding_right"><%= ArrayofPosts[IndexesOfThePost][i][j] %></p>
            <%  } %>   
        </div> 
        <%  } %>  
        <br>
      <% } %>
    <% } %>



    <%- include('../partials/footer'); %>
    
  </div>

</body>

<%- include('../partials/scripts_links'); %>

</html>
